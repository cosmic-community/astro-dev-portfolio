---
// src/components/TestimonialCard.astro
import type { Testimonial } from '../types';

export interface Props {
  testimonial: Testimonial;
}

const { testimonial } = Astro.props;
const photo = testimonial.metadata?.photo;
const rating = testimonial.metadata?.rating || 0;

// Generate star rating
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => i < rating);
};
---

<div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300">
  {testimonial.metadata?.featured && (
    <div class="flex justify-end mb-4">
      <span class="bg-primary-100 text-primary-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
        Featured
      </span>
    </div>
  )}
  
  <!-- Rating -->
  {rating > 0 && (
    <div class="flex items-center mb-4">
      {renderStars(rating).map(filled => (
        <svg 
          class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-300'}`}
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      ))}
    </div>
  )}
  
  <!-- Quote -->
  {testimonial.metadata?.quote && (
    <blockquote class="text-gray-700 mb-6 text-lg leading-relaxed">
      "{testimonial.metadata.quote}"
    </blockquote>
  )}
  
  <!-- Author Info -->
  <div class="flex items-center">
    {photo && (
      <div class="w-12 h-12 rounded-full overflow-hidden mr-4 flex-shrink-0">
        <img 
          src={`${photo.imgix_url}?w=96&h=96&fit=crop&faces=1&auto=format,compress`}
          alt={testimonial.metadata?.name || 'Testimonial author'}
          width="48"
          height="48"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    )}
    
    <div>
      {testimonial.metadata?.name && (
        <p class="font-semibold text-gray-900">
          {testimonial.metadata.name}
        </p>
      )}
      
      <div class="flex items-center text-sm text-gray-600">
        {testimonial.metadata?.title && (
          <span>{testimonial.metadata.title}</span>
        )}
        
        {testimonial.metadata?.title && testimonial.metadata?.company && (
          <span class="mx-1">at</span>
        )}
        
        {testimonial.metadata?.company && (
          <span class="font-medium">{testimonial.metadata.company}</span>
        )}
      </div>
      
      {testimonial.metadata?.relationship?.value && (
        <span class="inline-block bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded-full mt-1">
          {testimonial.metadata.relationship.value}
        </span>
      )}
    </div>
  </div>
</div>