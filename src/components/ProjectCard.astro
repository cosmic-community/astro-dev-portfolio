---
// src/components/ProjectCard.astro
import type { Project } from '../types';

export interface Props {
  project: Project;
  featured?: boolean;
}

const { project, featured = false } = Astro.props;
const featuredImage = project.metadata?.featured_image;
const technologies = project.metadata?.technologies?.split(',').map(t => t.trim()) || [];
---

<div class={`bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 ${featured ? 'lg:col-span-2' : ''}`}>
  {featuredImage && (
    <div class="aspect-video overflow-hidden rounded-t-xl">
      <img 
        src={`${featuredImage.imgix_url}?w=800&h=450&fit=crop&auto=format,compress`}
        alt={project.metadata?.name || project.title}
        width="800"
        height="450"
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
  )}
  
  <div class="p-6">
    <div class="flex items-start justify-between mb-3">
      <h3 class="text-xl font-bold text-gray-900 mb-2">
        {project.metadata?.name || project.title}
      </h3>
      {project.metadata?.featured && (
        <span class="bg-primary-100 text-primary-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
          Featured
        </span>
      )}
    </div>
    
    {project.metadata?.description && (
      <p class="text-gray-600 mb-4 line-clamp-3">
        {project.metadata.description}
      </p>
    )}
    
    {technologies.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {technologies.slice(0, 6).map(tech => (
          <span class="bg-gray-100 text-gray-700 text-xs font-medium px-2.5 py-1 rounded-full">
            {tech}
          </span>
        ))}
        {technologies.length > 6 && (
          <span class="bg-gray-100 text-gray-500 text-xs font-medium px-2.5 py-1 rounded-full">
            +{technologies.length - 6} more
          </span>
        )}
      </div>
    )}
    
    <div class="flex gap-3">
      {project.metadata?.project_url && (
        <a 
          href={project.metadata.project_url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium text-sm transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Live Demo
        </a>
      )}
      
      {project.metadata?.github_url && (
        <a 
          href={project.metadata.github_url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-700 font-medium text-sm transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          Code
        </a>
      )}
    </div>
  </div>
</div>