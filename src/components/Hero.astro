---
// src/components/Hero.astro
---

<section class="relative bg-gradient-to-br from-primary-50 to-white py-20 lg:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 animate-fade-in">
        Hi, I'm <span class="text-primary-600">Alex</span>
      </h1>
      <p class="text-xl sm:text-2xl text-gray-600 mb-8 animate-slide-up max-w-3xl mx-auto">
        A passionate full-stack developer creating exceptional web experiences with modern technologies
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-scale-in">
        <a href="#projects" 
           class="bg-primary-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-700 transition-all duration-300 hover:scale-105 hover:shadow-lg">
          View My Work
        </a>
        <a href="#contact" 
           class="border-2 border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-medium hover:border-primary-600 hover:text-primary-600 transition-all duration-300">
          Get In Touch
        </a>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>